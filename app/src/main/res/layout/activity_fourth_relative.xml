<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FourthActivityRelative">

    <RelativeLayout
        android:id="@+id/lay41_center"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        tools:ignore="DuplicateIds,InvalidId">

        <TextView
            android:id="@id/text4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="false"
            android:layout_centerInParent="true"
            android:background="#FFC107"
            android:clickable="true"
            android:padding="15dp"
            android:text="adfgbdseahbathnadffffffffffffffffffffffffffffxadbdggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggbhbadnzcvvvvvvvvbatttanmadvbbbbbbbbbt"
            android:textSize="@dimen/text_size"
            android:visibility="visible"
            tools:text="adfgbdseahbathnadffffffffffffffffffffffffffffxadbdggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggggbhbadnzcvvvvvvvvbatttanmadvbbbbbbbbbt" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/center"
        android:layout_alignEnd="@id/center"
        android:src="@drawable/my_icon"
        android:visibility="visible" />

    <View
        android:id="@+id/center"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lay41_center"
        android:text="Switch" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch1"
        android:layout_marginBottom="20dp"
        android:text="CheckBox"
        android:layout_centerHorizontal="true"
        tools:ignore="UnknownId" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox"
        android:max="200"
        android:min="1"
        android:progress="100"
        android:layout_centerHorizontal="true"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar"
        android:indeterminate="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>